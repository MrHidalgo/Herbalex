//- BTN
mixin btn(className, classNameModify, textName)
    a(
        href="javascript:void(0);"
        title=""
        class="btn " + className + " " + classNameModify
    )
        span.btn__text!= textName
        span.btn__icon-wrap
            i.btn__icon


//- MAIN TITLE
mixin mainTitle(textName, className)
    h1(class="main__title " + className)
        i.main__title-icon
        span(
            class="main__title-text"
            data-id= textName
        )!= textName


//- RATING
mixin rating(className)
    div(class="rating " + className)
       span.rating__text!= "Rating:"
       i.rating__icon

//- BREADCRUMBS
mixin breadcrumbs(arrName)
    .breadcrumbs
        .container.clearfix
            a(
                href="/"
                class="breadcrumbs__btn"
            )
                i.breadcrumbs__btn-icon
            - for(var i = 0; i < arrName.length; i++)
                a(
                    href="javascript:void(0);"
                    class="breadcrumbs__btn"
                )!= arrName[i]
                    if(i == arrName.length - 1)
                        i.breadcrumbs__btn-icon


//- RANDOM BG
mixin rowWithImageBgMain(className)
    div(class="row " + className)
        img(
            src="./image/img-bg-left.png"
            title=""
            alt=""
            class="row__img row__img-left"
        )
        img(
            src="./image/img-bg-right.png"
            title=""
            alt=""
            class="row__img row__img-right"
        )
